@model IEnumerable<int>

@{
    ViewBag.Title = "Arbol de Enteros";
}

<h1 align ="center">Arbol de Enteros</h1>

<p>
    @Html.ActionLink("Agregar Nuevo Int", "CreateInt")
</p>

<br />

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <div id="contenedor"></div>
    <h5>Seleccione una Opcion para Ordenar</h5>
    <form method="get" action="@Url.Action("IndexInt", "ArbolBinario")">
        <label for="Ordenar">Ordenar Por:</label>
        <select name="Tipo" id="Tipo">
            <option value=1>Pre-Orden</option>
            <option value=2>In-Orden</option>
            <option value=3>Post-Orden</option>
        </select>
        <button type="submit">Ordenar</button>
    </form>
</div>

<table class="table">
    <tr>
        <th>
            Número
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
            <td>
                @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                   @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) | *@
                @Html.ActionLink("Delete", "DeleteInt", new {item})
            </td>
        </tr>
    }

</table>

